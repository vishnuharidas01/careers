---
layout: layouts/base.njk
---
<h1>{{ title }}</h1>
<p class="muted">
  {{ company }} — {{ role }}{% if location %} · {{ location }}{% endif %}
</p>

<div class="card">
  <h2>Summary</h2>
  {{ content | safe }}
</div>

{% if contact and (contact.email or contact.linkedin) %}
  <div class="card">
    <h2>Contact</h2>
    {% if contact.email %}<div>Email: <a href="mailto:{{ contact.email }}">{{ contact.email }}</a></div>{% endif %}
    {% if contact.linkedin %}<div>LinkedIn: <a href="{{ contact.linkedin }}" target="_blank" rel="noopener">{{ contact.linkedin }}</a></div>{% endif %}
    {% if contact.github %}<div>GitHub: <a href="{{ contact.github }}" target="_blank" rel="noopener">{{ contact.github }}</a></div>{% endif %}
  </div>
{% endif %}

{% if downloads and (downloads.resumeUrl or downloads.coverLetterUrl) %}
  <div class="card">
    <h2>Downloads</h2>
    {% if downloads.resumeUrl %}<div><a href="{{ downloads.resumeUrl }}" target="_blank" rel="noopener">Resume (PDF)</a></div>{% endif %}
    {% if downloads.coverLetterUrl %}<div><a href="{{ downloads.coverLetterUrl }}" target="_blank" rel="noopener">Cover Letter (PDF)</a></div>{% endif %}
  </div>
{% endif %}

