<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{ name }} — Resume</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 40px; line-height: 1.35; }
    h1 { margin: 0 0 6px; font-size: 22px; }
    .meta { color: #444; font-size: 12px; margin-bottom: 14px; }
    h2 { font-size: 14px; margin: 18px 0 8px; border-bottom: 1px solid #ddd; padding-bottom: 4px; }
    ul { margin: 6px 0 0 18px; }
    li { margin: 4px 0; }
    .small { font-size: 12px; color: #444; }
  </style>
</head>
<body>
  <h1>{{ name }}</h1>
  <div class="meta">
    {{ title }} · {{ location }} · {{ email }} · {{ phone }}<br/>
    LinkedIn: {{ links.linkedin }} · GitHub: {{ links.github }}
  </div>

  <h2>Tailored Highlights</h2>
  <div class="small">{{ role }} @ {{ company }}</div>
  {{ resumeHtml | safe }}

</body>
</html>
